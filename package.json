{
  "name": "ngx-property-editor-workspace",
  "version": "1.0.0",
  "license": "MIT",
  "description": "An Angular library containing simple input components and a property editor component which automatically builds a form for editing all properties of any object.",
  "keywords": [
    "angular",
    "bootstrap",
    "input"
  ],
  "author": "Heiner Walter",
  "repository": {
    "type": "git",
    "url": "https://github.com/heinerwalter/ngx-property-editor.git"
  },
  "scripts": {
    "ng": "ng",
    "link:demo": "npm link ./projects/ngx-property-editor",
    "start:demo": "ng serve demo",
    "build": "ng build ngx-property-editor && cd projects/ngx-property-editor && npm run build",
    "build:demo": "ng build demo --configuration production",
    "watch": "ng build ngx-property-editor --watch --configuration development",
    "test": "ng test ngx-property-editor --code-coverage",
    "test:demo": "ng test demo",
    "test-headless": "ng test ngx-property-editor --browsers=ChromeHeadless --watch=false",
    "test-headless:demo": "ng test demo --browsers=ChromeHeadless --watch=false --code-coverage",
    "lint": "ng lint ngx-property-editor",
    "publish": "cd dist/ngx-property-editor/ && npm publish",
    "increment-version": "node scripts/increment-version.js",
    "increment-version-and-commit": "npm run increment-version && npm i && git add package.json package-lock.json projects/ngx-property-editor/package.json && git commit -m \"Incremented package version.\" && git push",
    "pic": "npm run publish && npm run increment-version-and-commit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@angular/animations": "^18.1.3",
    "@angular/common": "^18.1.3",
    "@angular/compiler": "^18.1.3",
    "@angular/core": "^18.1.3",
    "@angular/forms": "^18.1.3",
    "@angular/platform-browser": "^18.1.3",
    "@angular/platform-browser-dynamic": "^18.1.3",
    "@angular/router": "^18.1.3",
    "@fortawesome/angular-fontawesome": "~0.15.0",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@ng-bootstrap/ng-bootstrap": "^17.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "chardet": "^2.0.0",
    "ngx-property-editor": "^0.0.43",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.3",
    "zone.js": "^0.14.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.1.3",
    "@angular-eslint/builder": "^18.2.0",
    "@angular-eslint/eslint-plugin": "^18.2.0",
    "@angular-eslint/eslint-plugin-template": "^18.2.0",
    "@angular-eslint/schematics": "^18.2.0",
    "@angular-eslint/template-parser": "^18.2.0",
    "@angular/cli": "^18.1.3",
    "@angular/compiler-cli": "^18.1.3",
    "@angular/localize": "^18.1.3",
    "@types/jasmine": "^4.6.4",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "jasmine-core": "^4.6.1",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ng-packagr": "^18.1.0",
    "typescript": "~5.5.4"
  }
}
