{
  "name": "ngx-property-editor-workspace",
  "version": "1.0.0",
  "license": "MIT",
  "description": "An Angular library containing simple input components and a property editor component which automatically builds a form for editing all properties of any object.",
  "keywords": [
    "angular",
    "bootstrap",
    "input"
  ],
  "author": "Heiner Walter",
  "repository": {
    "type": "git",
    "url": "https://github.com/heinerwalter/ngx-property-editor.git"
  },
  "scripts": {
    "ng": "ng",
    "link:demo": "npm link ./projects/ngx-property-editor",
    "start:demo": "ng serve demo",
    "build": "ng build ngx-property-editor && cd projects/ngx-property-editor && npm run build",
    "build:demo": "ng build demo --configuration production",
    "watch": "ng build ngx-property-editor --watch --configuration development",
    "test": "ng test ngx-property-editor --code-coverage",
    "test:demo": "ng test demo",
    "test-headless": "ng test ngx-property-editor --browsers=ChromeHeadless --watch=false",
    "test-headless:demo": "ng test demo --browsers=ChromeHeadless --watch=false --code-coverage",
    "lint": "ng lint ngx-property-editor",
    "publish": "cd dist/ngx-property-editor/ && npm publish",
    "increment-version": "node scripts/increment-version.js",
    "increment-version-and-commit": "npm run increment-version && npm i && git add package.json package-lock.json projects/ngx-property-editor/package.json && git commit -m \"Incremented package version.\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.12",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.12",
    "@angular/router": "^16.2.12",
    "@fortawesome/angular-fontawesome": "^0.13.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-regular-svg-icons": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@ng-bootstrap/ng-bootstrap": "^15.1.2",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "chardet": "^2.0.0",
    "ngx-property-editor": "^0.0.31",
    "rxjs": "^7.8.0",
    "tslib": "^2.6.2",
    "zone.js": "^0.13.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.14",
    "@angular-eslint/builder": "^16.3.1",
    "@angular-eslint/eslint-plugin": "^16.2.0",
    "@angular-eslint/eslint-plugin-template": "^16.2.0",
    "@angular-eslint/schematics": "^16.3.1",
    "@angular-eslint/template-parser": "^16.3.1",
    "@angular/cli": "^16.2.14",
    "@angular/compiler-cli": "^16.2.0",
    "@angular/localize": "^16.2.12",
    "@types/jasmine": "^4.6.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "jasmine-core": "^4.6.0",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "ng-packagr": "^16.2.3",
    "typescript": "^5.1.6"
  }
}
